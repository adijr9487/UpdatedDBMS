<%- include('header.ejs'); -%>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="CSS/userdashboard.css">
    <title>Dashboard</title>
</head>
<body>

    <!-- navbar -->
    <nav class="navbar navbar-expand-md navbar-light">
        <button class="navbar-toggler ml-auto mb-2 bg-light" type="button"
            data-toggle="collapse" data-target="#myNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="myNavbar">
            <div clas="container-fluid">
                <div class="row">
                    <!-- sidebar -->
                    <div class="col-xl-2 col-lg-3 col-md-4 sidebar fixed-top">
                        <a href="/userdashboard" class="navbar-brand text-white d-block mx-auto text-center py-3 mb-4 bottom-border">Complaint <br>Management System</a>
                        <div class="bottom-border pb-3">
                            <img src="assets/user.jpg" width="50"
                            class="rounded-circle mr-3">
                            <a href="#" class="text-white"><%= data[0].first_name %> <%= data[0].last_name %></a>
                        </div>
                        <ul class="navbar-nav flex-column mt-4">
                            <li class="nav-item"><a href="#" class="nav-link text-white p-3 mb-2 current"><i class="fa fa-book text-light fa-lg mr-3" aria-hidden="true"></i>Lodge-Complaint</a></li>
                            <li class="nav-item"><a href="/complainthistory" class="nav-link text-white p-3 mb-2 sidebar-link"><i class="fa fa-history text-light fa-lg mr-3" aria-hidden="true"></i>Complaint-History</a></li>
                            <li class="nav-item"><a href="/userprofile" class="nav-link text-white p-3 mb-2 sidebar-link"><i class="fa fa-user text-light fa-lg mr-3" aria-hidden="true"></i>Profile</a></li>
                        </ul>
                    </div>
                    <!-- top-nav -->
                    <div class="col-lg-10 col-lg-9 col-md-8  ml-auto bg-dark fixed-top py-2 top-navbar">
                        <div class="row align-items-center">
                            <div class="offset-4 col-md-4">
                                <h4 class="text-light text-uppercase mb-0">Dashboard</h4>
                            </div>
                            <div class="offset-1 col-md-3">
                                <ul>
                                    <li class="nav-item ml-md-auto" data-toggle="modal" data-target="#sign-out"><a href="#" classs="nav-link"><i class="fa fa-sign-out text-danger fa-lg" aria-hidden="true"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- end of top-nav -->
                    <!-- end of sidebar -->
                </div>
            </div>
        </div>
    </nav>
    <!-- end of navbar -->

    <!-- modal -->
    <div class="modal fade" id="sign-out">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Want to leave?</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;
                    </button>
                </div>
                <div class="modal-body">
                    Press logout to leave
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Stay Here</button>
                    <a href="/logout"><button type="button" class="btn btn-danger">Logout</button></a>
                </div>
            </div>
        </div>
    </div>
    <!-- end of modal -->

    <section>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-lg-9 ml-auto">
                    <div class="row pt-5 mt-3 mb-5">
                        <h3> >Register a Complaint</h3>
                        <form class="complaintform1"  action='/userdashboard' method='POST' id='complaintform1'>
                            <div class="form-group row">
                                <label for="victimname" class="col-md-2 col-form-label">Victim Name</label>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" name="victimname" id="victimname" placeholder="Victim Name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="dateofcrime" class="col-md-2 col-form-label">Date of Crime</label>
                                <div class="col-md-4">
                                    <input type="date" class="form-control" name="dateofcrime" id="dateofcrime" placeholder="Date of Crime">
                                </div>
                                <label for="timeofcrime" class="col-md-2 col-form-label">Time of Crime</label>
                                <div class="col-md-4">
                                    <input type="datetime" class="form-control" name="timeofcrime" id="timeofcrime" placeholder="Approx. Time of Crime">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="type" class="col-md-2 col-form-label">Closest Location</label>
                                <div class="col-md-4">
                                        <select id="myList" form="complaintform1" name='city'>                                    
                                            <option value = "Mumbai" >Mumbai</option>
                                            <option value = "Delhi" >Delhi</option>
                                            <option value = "Bangalore" >Bangalore</option>
                                            <option value = "Hyderabad" >Hyderabad</option>
                                            <option value = "Ahmedabad" >Ahmedabad</option>
                                            <option value = "Chennai" >Chennai</option>
                                            <option value = "Kolkata" >Kolkata</option>
                                            <option value = "Surat" >Surat</option>
                                            <option value = "Pune" >Pune</option>
                                            <option value = "Jaipur" >Jaipur</option>
                                            <option value = "Kanpur" >Kanpur</option>
                                            <option value = "Nagpur" >Nagpur</option>
                                            <option value = "Lucknow" >Lucknow</option>
                                            <option value = "Visakhapatn" >Visakhapatn</option>
                                            <option value = "Thane" >Thane</option>
                                            <option value = "Bhopal" >Bhopal</option>
                                            <option value = "Indore" >Indore</option>
                                            <option value = "Pimpri-Chin" >Pimpri-Chin</option>
                                            <option value = "Patna" >Patna</option>
                                            <option value = "Vadodara" >Vadodara</option>
                                            <option value = "Ghaziabad" >Ghaziabad</option>
                                            <option value = "Ludhiana" >Ludhiana	</option>
                                            <option value = "Agra" >Agra</option>
                                            <option value = "Nashik" >Nashik</option>
                                            <option value = "Faridabad" >Faridabad</option>
                                            <option value = "Meerut" >Meerut</option>
                                            <option value = "Rajkot" >Rajkot</option>
                                            <option value = "Kalyan-Domb" >Kalyan-Domb</option>
                                            <option value = "Vasai-Virar" >Vasai-Virar</option>
                                            <option value = "Varanasi" >Varanasi</option>
                                            <option value = "Srinagar" >Srinagar</option>
                                            <option value = "Aurangabad" >Aurangabad</option>
                                            <option value = "Dhanbad" >Dhanbad</option>
                                            <option value = "Amritsar" >Amritsar</option>                                         
                                        </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="address" class="col-md-2 col-form-label">Address</label>
                                <div class="col-md-10">
                                    <input tye="text" class="form-control" name="address" id="address" placeholder="Address">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="type" class="col-md-2 col-form-label">Type of Crime</label>
                                <div class="col-md-4">
                                        <select id="myList" form="complaintform1" name='type'>
                                            <option value = "Antisocial behaviour">Antisocial behaviour</option>                                       
                                            <option value = "Arson">Arson</option>
                                            <option value = "Assault and Battery">Assault and Battery</option>
                                            <option value = "Burglary">Burglary</option>                                           
                                            <option value = "Childhood abuse">Childhood abuse</option>
                                            <option value = "Crime abroad">Crime abroad</option>
                                            <option value = "Cyber Crime">Cyber Crime</option> 
                                            <option value = "False Imprisonment">False Imprisonment</option>
                                            <option value = "False Pretenses">False Pretenses</option>
                                            <option value = "Homicide">Homicide</option>
                                            <option value = "Kidnapping">Kidnapping</option>                            
                                            <option value = "Rape">Rape </option>
                                            <option value = "Receipt of Stolen Goods">Receipt of Stolen Goods</option>
                                            <option value = "Robbery">Robbery</option>
                                            <option value = "Sexual harrassment">Sexual harrassment</option>
                                            <option value = "Terrorism">Terrorism</option>
                                            <option value = "Theft">Theft</option>                                            
                                            <option value = "Violent Crime">Violent Crime</option>
                                            <option value = "White Collar Crimes">White Collar Crimes</option>                                           
                                        </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="contact" class="col-md-2 col-form-label">Contact Number</label>
                                <div class="col-md-5">
                                    <input type="number" id="contact" name="contact" placeholder="Contact Number">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="description" class="col-md-2 col-form-label">Description</label>
                                <div class="col-md-10">
                                    <textarea class="form-control" id="description" name="description" rows="12" placeholder="Description about your complaint"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="offset-md-2 col-md-10">
                                    <button type="submit" class="btn btn-primary">Registered</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
<%- include('footer.ejs'); -%>
