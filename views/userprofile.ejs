<%- include('header.ejs'); -%>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="CSS/userdashboard.css">
    <title>Dashboard</title>
</head>
<body>

    <!-- navbar -->
    <nav class="navbar navbar-expand-md navbar-light">
        <button class="navbar-toggler ml-auto mb-2 bg-light" type="button"
            data-toggle="collapse" data-target="#myNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="myNavbar">
            <div clas="container-fluid">
                <div class="row">
                    <!-- sidebar -->
                    <div class="col-xl-2 col-lg-3 col-md-4 sidebar fixed-top">
                        <a href="/userdashboard" class="navbar-brand text-white d-block mx-auto text-center py-3 mb-4 bottom-border">Complaint <br>Management System</a>
                        <div class="bottom-border pb-3">
                            <img src="assets/user.jpg" width="50"
                            class="rounded-circle mr-3">
                            <a href="#" class="text-white"><%= data[0].first_name %> <%= data[0].last_name %></a>
                        </div>
                        <ul class="navbar-nav flex-column mt-4">
                            <li class="nav-item"><a href="/userdashboard" class="nav-link text-white p-3 mb-2 sidebar-link"><i class="fa fa-book text-light fa-lg mr-3" aria-hidden="true"></i>Lodge-Complaint</a></li>
                            <li class="nav-item"><a href="/complainthistory" class="nav-link text-white p-3 mb-2 sidebar-link"><i class="fa fa-history text-light fa-lg mr-3" aria-hidden="true"></i>Complaint-History</a></li>
                            <li class="nav-item"><a href="#" class="nav-link text-white p-3 mb-2 current"><i class="fa fa-user text-light fa-lg mr-3" aria-hidden="true"></i>Profile</a></li>
                        </ul>
                    </div>
                    <!-- top-nav -->
                    <div class="col-lg-10 col-lg-9 col-md-8  ml-auto bg-dark fixed-top py-2 top-navbar">
                        <div class="row align-items-center">
                            <div class="offset-4 col-md-4">
                                <h4 class="text-light text-uppercase mb-0">Dashboard</h4>
                            </div>
                            <div class="offset-1 col-md-3">
                                <ul>
                                    <li class="nav-item ml-md-auto" data-toggle="modal" data-target="#sign-out"><a href="#" classs="nav-link"><i class="fa fa-sign-out text-danger fa-lg" aria-hidden="true"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- end of top-nav -->
                    <!-- end of sidebar -->
                </div>
            </div>
        </div>
    </nav>
    <!-- end of navbar -->

    <!-- modal -->
    <div class="modal fade" id="sign-out">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Want to leave?</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;
                    </button>
                </div>
                <div class="modal-body">
                    Press logout to leave
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Stay Here</button>
                    <a href="/logout"><button type="button" class="btn btn-danger">Logout</button></a>
                </div>
            </div>
        </div>
    </div>
    <!-- end of modal -->

    <section>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-lg-9 ml-auto">
                    <div class="row pt-5 mt-3 mb-5">
                        <h3> >Profile Info</h3> 
                        <form class="complaintform"  action='/userprofile' method='POST'>
                            <div class="form-group row">
                                <label for="fullname" class="col-md-4 col-form-label">Full Name</label>
                                <div class="col-md-8" style="font-size: 1.2rem;">
                                    <%= data[0].first_name %> <%= data[0].last_name %>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="contact" class="col-md-4 col-form-label">Contact Number</label>
                                <div class="col-md-8" style="font-size: 1.2rem;">
                                    <%= data[0].phone %>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="email" class="col-md-4 col-form-label">Email</label>
                                <div class="col-md-8" style="font-size: 1.2rem;">
                                    <%= data[0].email %>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
<%- include('footer.ejs'); -%>
