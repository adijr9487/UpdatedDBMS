<%- include('header.ejs'); -%>

    <link rel="stylesheet" href="CSS/styles.css">
    <link rel="stylesheet" href="CSS/regi.css">

    <title>User's Registration</title>
</head>
<body style="font-family: 'sans-serif';">
    <nav class="navbar navbar-dark navbar-expand-sm fixed-top">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#Navbar">
                <span class="navbar-toggler-icon"></span>
            </button> 
            <a class="navbar-brand mr-auto" href="/">Complaint Management System</a>
            <div class="collapse  navbar-collapse" id="Navbar">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item"><a class="nav-link" href="/userslogin">User's login</a></li>
                    <li class="nav-item active"><a class="nav-link" href="/userregistration">User's Registration</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin">Admin login</a></li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container">
        <div class="row row-content">
            <div class="col-12 col-md-9">
                <form class="registration-form"  action='/userregistration' method='POST'>
                    <h1>Registration Form</h1>
                    <p style="color: rgb(194, 13, 13);"><%= state %></p>
                    <div class="form-group row">
                        <label for="firstname" class="col-md-2 col-form-label">First Name</label>
                        <div class=" txtb col-md-10">
                            <input type="text" class="form-control" id="firstname" name="firstname" placeholder="First Name">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lastname" class="col-md-2 col-form-label">Last Name</label>
                        <div class="txtb col-md-10">
                            <input type="text" class="form-control" id="lastname" name="lastname" placeholder="Last Name">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Email" class="col-md-2 col-form-label">Email</label>
                        <div class="txtb col-md-10">
                            <input type="email" class="form-control" id="emailid" name="email" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Phonenumber" class="col-md-2 col-form-label">Phone Number</label>
                        <div class="txtb col-md-10">
                            <input type="number" class="form-control" id="phonenumber" name="phonenumber" placeholder="Phone Number">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="password" class="col-md-2 col-form-label">Password</label>
                        <div class="txtb col-md-10">
                            <input type="password" class="form-control" id="password" name="pass" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="offset-md-2 col-md-10">
                            <button type="submit" class="btn btn-success">Registered</button>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="bottom-text offset-md-3 col-md-7">
                            Already have account? <a href="/userslogin" style="color:#d35400">Log-in</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

<%- include('footer.ejs'); -%>
